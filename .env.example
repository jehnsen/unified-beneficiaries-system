# ==================================================
# UBIS Provincial Grid - Environment Configuration
# ==================================================
# Laravel 11.x + MySQL 8.0 + Sanctum
# Multi-Tenant Social Welfare Fraud Detection System
# ==================================================

# Application Settings
APP_NAME="UBIS Provincial Grid"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Asia/Manila
APP_URL=http://localhost:8000
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_PH

# Application Maintenance
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# Database Configuration (MySQL 8.0)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_ENGINE=InnoDB

# Session & Cache
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_DRIVER=database
CACHE_STORE=database

# Queue Configuration
QUEUE_CONNECTION=database
QUEUE_FAILED_DRIVER=database-uuids

# Broadcasting
BROADCAST_CONNECTION=log

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ==================================================
# File Storage (Disbursement Proofs: Photos, Signatures, GPS)
# ==================================================
FILESYSTEM_DISK=public

# Storage Paths
DISBURSEMENT_PROOF_PATH=disbursement_proofs
MAX_PHOTO_SIZE=5120
MAX_SIGNATURE_SIZE=2048
MAX_ID_PHOTO_SIZE=5120
ALLOWED_IMAGE_TYPES=jpg,jpeg,png

# ==================================================
# Laravel Sanctum (API Token Authentication)
# ==================================================
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:8000,127.0.0.1,127.0.0.1:8000
SANCTUM_TOKEN_PREFIX=
SANCTUM_EXPIRATION=null

# ==================================================
# UBIS Business Rules Configuration
# ==================================================

# Fraud Detection Settings
FRAUD_RISK_THRESHOLD_DAYS=90
FRAUD_SAME_TYPE_THRESHOLD_DAYS=30
FRAUD_HIGH_FREQUENCY_THRESHOLD=3
FRAUD_LEVENSHTEIN_THRESHOLD=3

# Provincial Grid Settings
ENABLE_INTER_LGU_SEARCH=true
MASK_SENSITIVE_DATA=true
ENABLE_GOLDEN_RECORD=true

# Claim Amount Limits (PHP)
MIN_CLAIM_AMOUNT=0.01
MAX_CLAIM_AMOUNT=999999.99

# Phonetic Search Algorithm (soundex or metaphone)
PHONETIC_ALGORITHM=soundex

# Budget Tracking
ENABLE_BUDGET_TRACKING=true
ENABLE_BUDGET_ALERTS=true
BUDGET_ALERT_THRESHOLD=80

# ==================================================
# Email Configuration (For Notifications)
# ==================================================
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@ubis.province.gov.ph"
MAIL_FROM_NAME="${APP_NAME}"

# ==================================================
# Third-Party Services
# ==================================================

# Google Maps (For GPS Verification)
GOOGLE_MAPS_API_KEY=

# SMS Gateway (For Beneficiary Notifications)
SMS_PROVIDER=
SMS_API_KEY=
SMS_SENDER_NAME="UBIS"

# ==================================================
# Security & Performance
# ==================================================

# CORS Configuration
CORS_ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8080"
CORS_ALLOWED_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_ALLOWED_HEADERS="Content-Type,Authorization,X-Requested-With"
CORS_EXPOSED_HEADERS=
CORS_MAX_AGE=3600
CORS_SUPPORTS_CREDENTIALS=true

# API Rate Limiting
API_RATE_LIMIT=60
API_RATE_LIMIT_WINDOW=1

# Password Reset
PASSWORD_RESET_TIMEOUT=3600

# ==================================================
# Development/Testing Only (Remove in Production)
# ==================================================

# Telescope (Laravel Debug Tool)
TELESCOPE_ENABLED=false

# Debugbar
DEBUGBAR_ENABLED=false

# Seed Data
SEED_MUNICIPALITIES=true
SEED_USERS=true
SEED_BENEFICIARIES=false

# ==================================================
# Production-Only Settings (Uncomment in Production)
# ==================================================

# APP_ENV=production
# APP_DEBUG=false
# LOG_LEVEL=warning
# SESSION_SECURE_COOKIE=true
# CACHE_DRIVER=redis
# QUEUE_CONNECTION=redis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# ==================================================
# Vite (Frontend Build Tool)
# ==================================================
VITE_APP_NAME="${APP_NAME}"
VITE_API_BASE_URL="${APP_URL}/api"
